<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.attackme.myuploader.dao.FileDao">
    <resultMap id="BaseResultMap" type="cn.attackme.myuploader.model.File">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="md5" property="md5" />
        <result column="path" property="path" />
        <result column="upload_time" property="uploadTime" />
    </resultMap>

    <sql id="Base_Column_List">
        id,name,md5,path,upload_time
    </sql>

    <select id="getById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from file
        where id = #{id}
    </select>

    <insert id="save" parameterType="cn.attackme.myuploader.model.File" keyProperty="id" useGeneratedKeys="true">
        insert into file(name,md5,path,upload_time) values(#{name},#{md5},#{path},#{uploadTime})
    </insert>

    <update id="update" parameterType="cn.attackme.myuploader.model.File" >
        <if test="id != null">
            update file
            <set>
                <if test="name != null">
                    name = #{name},
                </if>
                <if test="md5 != null">
                    md5 = #{md5},
                </if>
                <if test="path != null">
                    path = #{path},
                </if>
                <if test="uploadTime != null">
                    upload_time = #{uploadTime},
                </if>
            </set>
            where id = #{id}
        </if>
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        delete from file where id = #{id}
    </delete>

    <select id="getByFile" parameterType="cn.attackme.myuploader.model.File" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from file
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null">
                and name = #{name}
            </if>
            <if test="md5 != null">
                and md5 = #{md5}
            </if>
            <if test="path != null">
                and path = #{path}
            </if>
            <if test="uploadTime != null">
                and upload_time = #{uploadTime}
            </if>
        </where>
    </select>
</mapper>